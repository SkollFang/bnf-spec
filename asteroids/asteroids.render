action thrust power
    move(ship, power, 0)
end action

action turn angle
    rotate(ship, angle)
end action

action populate
    set 10 asteroids with asteroid
    place(each, rand(WINDOW_WIDTH), rand(WINDOW_HEIGHT)) with asteroids
end action

action placeShip
	place(ship, WINDOW_WIDTH/2, WINDOW_HEIGHT/2)
end action

event menu
    display menu
end event

event game_lost
    clear
end event
